<!ELEMENT pvtml (languages, lesson, e*)>
<!ATTLIST pvtml title  CDATA #REQUIRED
                author CDATA #REQUIRED>
	  
  <!ELEMENT languages (o,t)>
  
  <!ELEMENT lesson (desc*)>
    <!ELEMENT desc (#PCDATA)>
    <!ATTLIST desc no CDATA #REQUIRED
                   inc CDATA #IMPLIED>

  <!ELEMENT e (o, t)>
  <!ATTLIST e m CDATA #REQUIRED>
    <!ELEMENT o (#PCDATA)>
    <!ELEMENT t (#PCDATA)>
